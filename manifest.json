{
  "name": "Sales Safari",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Capture snippets during sales safari",
  "permissions": [
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "tabs",
    "history"
  ],
  "browser_action": {
    "default_icon": {
     "19": "icon.png"
    },
    "default_title": "Sales Safari"
  },
  "background": {
    "scripts": ["db.js", "background.js"]
  },
  "sandbox": {
    "pages": ["app.html"]
  }
}
