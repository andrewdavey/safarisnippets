{
  "name": "Sales Safari Snippets",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Capture snippets during sales safari",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "tabs",
    "history",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": {
     "19": "19.png",
     "38": "38.png"
    },
    "default_title": "View sales safari snippets"
  },
  "background": {
    "scripts": ["db.js", "background.js"]
  },
  "sandbox": {
    "pages": ["app/app.html"]
  }
}
